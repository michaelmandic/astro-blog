---
import Footer from "../components/Footer.astro";
import "../styles/global.css";
import Header from "../components/Header.astro";

const pageTitle = "About Me";

const identity = {
  firstName: "Michael",
  country: "Serbia",
  occupation: "Software Engineer",
  hobbies: ["gaming", "coding", "music"],
};

const skills = [
  "HTML",
  "CSS",
  "JavaScript",
  "React",
  "Astro",
  "Python",
  "C++",
  "Git",
];

const happy = true;
const finished = false;
const goal = 3;

const skillColor = "navy";
const fontWeight = "bold";
const textCase = "uppercase";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
  </head>
  <body>
    <Header />

    <h1>{pageTitle}</h1>
    <style define:vars={{ skillColor, fontWeight, textCase }}>
      h1 {
        color: purple;
        font-size: 4rem;
      }
      .skill {
        color: var(--skillColor);
        font-weight: var(--fontWeight);
        text-transform: var(--textCase);
      }
    </style>
    <h2>Hi, I'm Michael</h2>

    <p>
      I'm a web developer and software engineer, and I built this blog using <a
        href="https://astro.build/"
        target="_blank">Astro</a
      >.
    </p>

    <p>
      The source code for this website is available on <a
        href="https://github.com/michaelmandic/astro-blog"
        target="_blank">GitHub</a
      >.
    </p>

    <p>Here are a few facts about me:</p>
    <ul>
      <li>My name is {identity.firstName}.</li>
      <li>
        I live in {identity.country} and I am a {identity.occupation}.
      </li>
      {
        identity.hobbies.length >= 2 && (
          <li>
            Two of my hobbies are: {identity.hobbies[0]} and{" "}
            {identity.hobbies[1]}
          </li>
        )
      }
    </ul>
    <p>My skills are:</p>
    <ul>
      {skills.map((skill) => <li class="skill">{skill}</li>)}
    </ul>
    {happy && <p>I am happy to be learning Astro!</p>}

    {finished && <p>I finished this tutorial!</p>}

    {
      goal === 3 ? (
        <p>My goal is to finish in 3 days.</p>
      ) : (
        <p>My goal is not 3 days.</p>
      )
    }
    <Footer />
    <script>
      import "../scripts/menu.js";
    </script>
  </body>
</html>
